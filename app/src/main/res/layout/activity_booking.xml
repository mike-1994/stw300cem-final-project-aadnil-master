<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/gradientbackground"
        android:orientation="vertical"
        android:padding="20dp"
        tools:context=".BookingActivity">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:gravity="center"
            android:text="Booking"
            android:textColor="#FFFFFF"
            android:textColorHint="#ffffff"
            android:textSize="40dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/b_id"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="50dp"
            android:hint="Enter your User ID "
            android:paddingLeft="12dp"
            android:textColor="#FFFFFF"
            android:textColorHint="#ffffff"
            android:textSize="20dp"
            android:textStyle="bold"
            />

        <TextView
            android:id="@+id/b_f_name"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:hint="Enter your First Name"
            android:paddingLeft="12dp"
            android:textColor="#FFFFFF"
            android:textColorHint="#ffffff"
            android:textSize="20dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/b_l_name"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:paddingLeft="12dp"
            android:text="Last Name:"
            android:textColor="#FFFFFF"
            android:textColorHint="#ffffff"
            android:textSize="20dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/b_email"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:paddingLeft="12dp"
            android:text="Email:"
            android:textColor="#FFFFFF"
            android:textColorHint="#ffffff"
            android:textSize="20dp"
            android:textStyle="bold" />


        <EditText
            android:id="@+id/start_time"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:paddingLeft="12dp"
            android:drawablePadding="12dp"
            android:padding="10dp"
            android:inputType="time"
            android:hint="Enter your Start Time "
            android:drawableLeft="@drawable/ic_access_time_black_24dp"
            android:textColor="#FFFFFF"
            android:textColorHint="#ffffff"
            android:textSize="20dp"

            android:textStyle="bold" />

        <EditText
            android:id="@+id/end_time"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="20dp"
            android:paddingLeft="12dp"
            android:hint="Enter End Time "
            android:inputType="time"
            android:drawableLeft="@drawable/ic_access_time_black_24dp"
            android:drawablePadding="12dp"
            android:textColor="#FFFFFF"
            android:textColorHint="#ffffff"
            android:textSize="20dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/v_number"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="20dp"
            android:paddingLeft="12dp"
            android:hint="Enter your Vehicle Number"

            android:drawablePadding="16dp"
            android:textColor="#FFFFFF"
            android:textColorHint="#ffffff"
            android:textSize="20dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/v_type"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="20dp"
            android:paddingLeft="12dp"
            android:hint="Enter your Vehicle Type"
            android:textColor="#FFFFFF"
            android:textColorHint="#ffffff"
            android:textSize="20dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/date"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="20dp"
            android:paddingLeft="12dp"
            android:hint="Enter your Date"
            android:inputType="date"
            android:drawableLeft="@drawable/ic_date_range_black_24dp"
            android:textColor="#FFFFFF"
            android:textColorHint="#ffffff"
            android:textSize="20dp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/book_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@drawable/button"
            android:gravity="center"
            android:text="Book"
            android:textSize="20dp"
            android:textStyle="bold" />

        <!--<Button-->
            <!--android:id="@+id/cancel_btn"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_marginTop="20dp"-->
            <!--android:background="@drawable/button"-->
            <!--android:text="Cancel"-->
            <!--android:textSize="20dp"-->
            <!--android:textStyle="bold" />-->


    </LinearLayout>
</ScrollView>